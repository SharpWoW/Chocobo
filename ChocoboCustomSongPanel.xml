<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<Frame name="ChocoboCustomSongPanel" hidden="true">
    <Scripts>
        <OnLoad>Chocobo.CustomSongPanel:OnLoad(self);</OnLoad>
        <OnShow>Chocobo.CustomSongPanel:Update();</OnShow>
    </Scripts>
    <Frames>
        <Frame name="$parent_Description">
            <Size>
                <AbsDimension x="600" y="25" />
            </Size>
            <Anchors>
                <Anchor point="TOP">
                    <Offset>
                        <AbsDimension x="0" y="-10" />
                    </Offset>
                </Anchor>
            </Anchors>
            <Layers>
                <Layer>
                    <FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="%CUSTOMSONG_DESCRIPTION%">
                        <Anchors>
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <FontHeight>
                            <AbsValue val="12" />
                        </FontHeight>
                        <Color r="1" g="0.8196079" b="0" />
                        <Shadow>
                            <Color r="0" g="0" b="0" />
                            <Offset>
                                <AbsDimension x="1" y="-1" />
                            </Offset>
                        </Shadow>
                    </FontString>
                </Layer>
            </Layers>
        </Frame>
        <Frame name="$parent_CustomPanel">
            <Size>
                <AbsDimension x="370" y="120" />
            </Size>
            <Anchors>
                <Anchor point="TOP">
                    <Offset>
                        <AbsDimension x="0" y="-50" />
                    </Offset>
                </Anchor>
            </Anchors>
            <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                <Color r="0.2" g="0.2" b="0.2" a="0.9" />
                <BorderColor r="0.3" g="0.3" b="0.3" a="1" />
                <BackgroundInsets>
                    <AbsInset left="5" right="5" top="5" bottom="5" />
                </BackgroundInsets>
                <TileSize>
                    <AbsValue val="16" />
                </TileSize>
                <EdgeSize>
                    <AbsValue val="16" />
                </EdgeSize>
            </Backdrop>
            <Frames>
                <Frame name="$parent_Custom">
                    <Size>
                        <AbsDimension x="360" y="18" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="5" y="-8" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Layers>
                        <Layer>
                            <FontString name="$parentDesc" font="Fonts\FRIZQT__.TTF" text="">
                                <Anchors>
                                    <Anchor point="TOPLEFT" />
                                    <Anchor point="BOTTOMRIGHT" />
                                </Anchors>
                                <FontHeight>
                                    <AbsValue val="12" />
                                </FontHeight>
                                <Color r="1" g="0.8196079" b="0" />
                                <Shadow>
                                    <Color r="0" g="0" b="0" />
                                    <Offset>
                                        <AbsDimension x="1" y="-1" />
                                    </Offset>
                                </Shadow>
                            </FontString>
                        </Layer>
                    </Layers>
                </Frame>
                <EditBox name="$parent_SongEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
                    <Size>
                        <AbsDimension x="150" y="22" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="110" y="-32" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </EditBox>
                <EditBox name="$parent_MountEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
                    <Size>
                        <AbsDimension x="150" y="22" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="110" y="-56" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </EditBox>
                <Button name="$parent_AddButton" text="" inherits="OptionsButtonTemplate">
                    <Size>
                        <AbsDimension x="80" y="22" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="64" y="-81" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Scripts>
                        <OnClick>Chocobo:AddCustomMusic(ChocoboCustomSongPanel_CustomPanel_SongEditBox:GetText(), ChocoboCustomSongPanel_CustomPanel_MountEditBox:GetText());</OnClick>
                    </Scripts>
                </Button>
                <Button name="$parent_RemoveButton" text="" inherits="OptionsButtonTemplate">
                    <Size>
                        <AbsDimension x="80" y="22" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="145" y="-81" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Scripts>
                        <OnClick>Chocobo:RemoveCustomMusic(ChocoboCustomSongPanel_CustomPanel_MountEditBox:GetText());</OnClick>
                    </Scripts>
                </Button>
                <Button name="$parent_ListButton" text="" inherits="OptionsButtonTemplate">
                    <Size>
                        <AbsDimension x="80" y="22" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="227" y="-81" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Scripts>
                        <OnClick>Chocobo:PrintMusic();</OnClick>
                    </Scripts>
                </Button>
            </Frames>
        </Frame>
    </Frames>
</Frame>

</Ui>

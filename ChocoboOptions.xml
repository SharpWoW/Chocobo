<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<Frame name="ChocoboOptions" hidden="true">
	<Scripts>
		<OnLoad>Chocobo.Options:OnLoad(self);</OnLoad>
		<OnShow>Chocobo.Options:Update();</OnShow>
	</Scripts>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parent_Logo" file="Interface\AddOns\Chocobo\images\chocobo.tga" alphaMode="BLEND" hidden="false">
				<Size>
					<AbsDimension x="256" y="512" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="-75" />
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
		</Layer>
	</Layers>
	<Frames>
		<Frame name="$parent_Description">
			<Size>
				<AbsDimension x="370" y="30" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-10" />
					</Offset>
				</Anchor>
			</Anchors>
			<Layers>
				<Layer>
					<FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="">
						<Anchors>
							<Anchor point="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" />
						</Anchors>
						<FontHeight>
							<AbsValue val="12" />
						</FontHeight>
						<Color r="1" g="0.8196079" b="0" />
						<Shadow>
							<Color r="0" g="0" b="0" />
							<Offset>
								<AbsDimension x="1" y="-1" />
							</Offset>
						</Shadow>
					</FontString>
				</Layer>
			</Layers>
		</Frame>
		<Frame name="$parent_SongsPanel">
			<Size>
				<AbsDimension x="370" y="95" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-50" />
					</Offset>
				</Anchor>
			</Anchors>
			<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
				<Color r="0.2" g="0.2" b="0.2" a="0.9" />
				<BorderColor r="0.3" g="0.3" b="0.3" a="1" />
				<BackgroundInsets>
					<AbsInset left="5" right="5" top="5" bottom="5" />
				</BackgroundInsets>
				<TileSize>
					<AbsValue val="16" />
				</TileSize>
				<EdgeSize>
					<AbsValue val="16" />
				</EdgeSize>
			</Backdrop>
			<Frames>
				<Frame name="$parent_Song">
					<Size>
						<AbsDimension x="360" y="18" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="5" y="-8" />
							</Offset>
						</Anchor>
					</Anchors>
					<Layers>
						<Layer>
							<FontString name="$parentDesc" font="Fonts\FRIZQT__.TTF" text="">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
								<FontHeight>
									<AbsValue val="12" />
								</FontHeight>
								<Color r="1" g="0.8196079" b="0" />
								<Shadow>
									<Color r="0" g="0" b="0" />
									<Offset>
										<AbsDimension x="1" y="-1" />
									</Offset>
								</Shadow>
							</FontString>
						</Layer>
					</Layers>
				</Frame>
				<EditBox name="$parent_SongEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
					<Size>
						<AbsDimension x="150" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="110" y="-32" />
							</Offset>
						</Anchor>
					</Anchors>
				</EditBox>
				<Button name="$parent_AddSong" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="24" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:AddMusic(ChocoboOptions_SongsPanel_SongEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_RemoveSong" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="105" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:RemoveMusic(ChocoboOptions_SongsPanel_SongEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ResetSongs" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="187" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:ResetMusic();</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ListSongs" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="267" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:PrintMusic();</OnClick>
					</Scripts>
				</Button>
			</Frames>
		</Frame>
		<Frame name="$parent_MountPanel">
			<Size>
				<AbsDimension x="370" y="95" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-145" />
					</Offset>
				</Anchor>
			</Anchors>
			<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
				<Color r="0.2" g="0.2" b="0.2" a="0.9" />
				<BorderColor r="0.3" g="0.3" b="0.3" a="1" />
				<BackgroundInsets>
					<AbsInset left="5" right="5" top="5" bottom="5" />
				</BackgroundInsets>
				<TileSize>
					<AbsValue val="16" />
				</TileSize>
				<EdgeSize>
					<AbsValue val="16" />
				</EdgeSize>
			</Backdrop>
			<Frames>
				<Frame name="$parent_Mount">
					<Size>
						<AbsDimension x="360" y="18" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="5" y="-8" />
							</Offset>
						</Anchor>
					</Anchors>
					<Layers>
						<Layer>
							<FontString name="$parentDesc" font="Fonts\FRIZQT__.TTF" text="">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
								<FontHeight>
									<AbsValue val="12" />
								</FontHeight>
								<Color r="1" g="0.8196079" b="0" />
								<Shadow>
									<Color r="0" g="0" b="0" />
									<Offset>
										<AbsDimension x="1" y="-1" />
									</Offset>
								</Shadow>
							</FontString>
						</Layer>
					</Layers>
				</Frame>
				<EditBox name="$parent_MountEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
					<Size>
						<AbsDimension x="150" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="110" y="-32" />
							</Offset>
						</Anchor>
					</Anchors>
				</EditBox>
				<Button name="$parent_AddMount" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="24" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:AddMount(ChocoboOptions_MountPanel_MountEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_RemoveMount" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="105" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:RemoveMount(ChocoboOptions_MountPanel_MountEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ResetMounts" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="187" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:ResetMounts();</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ListMounts" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="267" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:PrintMounts();</OnClick>
					</Scripts>
				</Button>
			</Frames>
		</Frame>
		<Button name="$parent_ToggleMount" text="" inherits="UIPanelButtonTemplate2">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-250" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:FilterMount(nil, true); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_ToggleDebug" text="" inherits="UIPanelButtonTemplate2">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-293" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:ToggleDebug(true); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_ToggleButton" text="" inherits="UIPanelButtonTemplate2">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="-336" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:Toggle(true); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<CheckButton name="$parent_HorseToggle" inherits="OptionsCheckButtonTemplate">
			<Size>
				<AbsDimension x="40" y="40" />
			</Size>
			<Anchors>
				<Anchor point="BOTTOMLEFT">
					<Offset>
						<AbsDimension x="20" y="60" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:HorseToggle(true); Chocobo.Options:Update();</OnClick>
				<OnEnter>Chocobo.Options:HorseHelp(self);</OnEnter>
			</Scripts>
		</CheckButton>
		<CheckButton name="$parent_RavenLordToggle" inherits="OptionsCheckButtonTemplate">
			<Size>
				<AbsDimension x="40" y="40" />
			</Size>
			<Anchors>
				<Anchor point="BOTTOMLEFT">
					<Offset>
						<AbsDimension x="20" y="20" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:RavenLordToggle(true); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</CheckButton>
	</Frames>
</Frame>
</Ui>

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<Frame name="ChocoboOptionsFrame" parent="UIParent" hidden="true" enableMouse="true" movable="true">
	<Size>
		<AbsDimension x="400" y="500" />
	</Size>
	<Anchors>
		<Anchor point="CENTER" />
	</Anchors>
	<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
		<EdgeSize>
			<AbsValue val="32" />
		</EdgeSize>
		<TileSize>
			<AbsValue val="32" />
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="11" right="12" top="12" bottom="11" />
		</BackgroundInsets>
	</Backdrop>
	<Scripts>
		<OnLoad>Chocobo.Options:OnLoad();</OnLoad>
		<OnShow>Chocobo.Options:Update();</OnShow>
		<OnMouseDown>self:StartMoving();</OnMouseDown>
		<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp>
	</Scripts>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parent_TitleBorder" file="Interface\DialogFrame\UI-DialogBox-Header">
				<Size>
					<AbsDimension x="300" y="50" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="8" />
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<FontString name="$parent_TitleString" font="Fonts\FRIZQT__.TTF" text="">
				<Size>
					<AbsDimension x="140" y="0" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-1" />
						</Offset>
					</Anchor>
				</Anchors>
				<FontHeight>
					<AbsValue val="12" />
				</FontHeight>
				<Color r="1" g="0.8196079" b="0" />
				<Shadow>
					<Color r="0" g="0" b="0" />
					<Offset>
						<AbsDimension x="1" y="-1" />
					</Offset>
				</Shadow>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
			<Anchors>
				<Anchor point="TOPRIGHT">
					<Offset>
						<AbsDimension x="-3" y="-3" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>ChocoboOptionsFrame:Hide();</OnClick>
			</Scripts>
		</Button>
		<Frame name="$parent_Description">
			<Size>
				<AbsDimension x="370" y="33" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-28" />
					</Offset>
				</Anchor>
			</Anchors>
			<Layers>
				<Layer>
					<FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="">
						<Anchors>
							<Anchor point="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" />
						</Anchors>
						<FontHeight>
							<AbsValue val="12" />
						</FontHeight>
						<Color r="1" g="0.8196079" b="0" />
						<Shadow>
							<Color r="0" g="0" b="0" />
							<Offset>
								<AbsDimension x="1" y="-1" />
							</Offset>
						</Shadow>
					</FontString>
				</Layer>
			</Layers>
		</Frame>
		<Frame name="$parent_SongsPanel">
			<Size>
				<AbsDimension x="370" y="95" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-67" />
					</Offset>
				</Anchor>
			</Anchors>
			<Backdrop bgFile="Interface\Tooltips\UI-Tooltip\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
				<BackgroundInsets>
					<AbsInset left="5" right="5" top="5" bottom="5" />
				</BackgroundInsets>
				<TileSize>
					<AbsValue val="16" />
				</TileSize>
				<EdgeSize>
					<AbsValue val="16" />
				</EdgeSize>
			</Backdrop>
			<Frames>
				<Frame name="$parent_Song">
					<Size>
						<AbsDimension x="360" y="18" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="5" y="-8" />
							</Offset>
						</Anchor>
					</Anchors>
					<Layers>
						<Layer>
							<FontString name="$parentDesc" font="Fonts\FRIZQT__.TTF" text="">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
								<FontHeight>
									<AbsValue val="12" />
								</FontHeight>
								<Color r="1" g="0.8196079" b="0" />
								<Shadow>
									<Color r="0" g="0" b="0" />
									<Offset>
										<AbsDimension x="1" y="-1" />
									</Offset>
								</Shadow>
							</FontString>
						</Layer>
					</Layers>
				</Frame>
				<EditBox name="$parent_SongEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
					<Size>
						<AbsDimension x="150" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="110" y="-32" />
							</Offset>
						</Anchor>
					</Anchors>
				</EditBox>
				<Button name="$parent_AddSong" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="24" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:AddMusic(ChocoboOptionsFrame_SongsPanel_SongEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_RemoveSong" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="105" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:RemoveMusic(ChocoboOptionsFrame_SongsPanel_SongEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ResetSongs" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="187" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:ResetMusic();</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ListSongs" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="267" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:PrintMusic();</OnClick>
					</Scripts>
				</Button>
			</Frames>
		</Frame>
		<Frame name="$parent_MountPanel">
			<Size>
				<AbsDimension x="370" y="95" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-162" />
					</Offset>
				</Anchor>
			</Anchors>
			<Backdrop bgFile="Interface\Tooltips\UI-Tooltip\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
				<BackgroundInsets>
					<AbsInset left="5" right="5" top="5" bottom="5" />
				</BackgroundInsets>
				<TileSize>
					<AbsValue val="16" />
				</TileSize>
				<EdgeSize>
					<AbsValue val="16" />
				</EdgeSize>
			</Backdrop>
			<Frames>
				<Frame name="$parent_Mount">
					<Size>
						<AbsDimension x="360" y="18" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="5" y="-8" />
							</Offset>
						</Anchor>
					</Anchors>
					<Layers>
						<Layer>
							<FontString name="$parentDesc" font="Fonts\FRIZQT__.TTF" text="">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
								<FontHeight>
									<AbsValue val="12" />
								</FontHeight>
								<Color r="1" g="0.8196079" b="0" />
								<Shadow>
									<Color r="0" g="0" b="0" />
									<Offset>
										<AbsDimension x="1" y="-1" />
									</Offset>
								</Shadow>
							</FontString>
						</Layer>
					</Layers>
				</Frame>
				<EditBox name="$parent_MountEditBox" letters="100" enableMouse="true" inherits="InputBoxTemplate">
					<Size>
						<AbsDimension x="150" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="110" y="-32" />
							</Offset>
						</Anchor>
					</Anchors>
				</EditBox>
				<Button name="$parent_AddMount" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="24" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:AddMount(ChocoboOptionsFrame_MountPanel_MountEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_RemoveMount" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="105" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:RemoveMount(ChocoboOptionsFrame_MountPanel_MountEditBox:GetText());</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ResetMounts" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="187" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:ResetMounts();</OnClick>
					</Scripts>
				</Button>
				<Button name="$parent_ListMounts" text="" inherits="OptionsButtonTemplate">
					<Size>
						<AbsDimension x="80" y="22" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="267" y="-60" />
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick>Chocobo:PrintMounts();</OnClick>
					</Scripts>
				</Button>
			</Frames>
		</Frame>
		<Button name="$parent_ToggleMount" text="%TOGGLE_MOUNT_STATUS%" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="80" y="-262" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:FilterMount(); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_ToggleDebug" text="%TOGGLE_MOUNT_STATUS%" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="80" y="-305" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:ToggleDebug(); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_ToggleButton" text="" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="80" y="-348" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:Toggle(); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_OpenSoundControl" text="" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="240" y="38" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="80" y="-391" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>ChocoboOptionsFrame:Hide(); ChocoboSoundControlFrame:Show();</OnClick>
			</Scripts>
		</Button>
		<CheckButton name="$parent_RavenLordToggle" inherits="OptionsCheckButtonTemplate">
			<Size>
				<AbsDimension x="40" y="40" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="25" y="-434" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:RavenLordToggle(); Chocobo.Options:Update();</OnClick>
			</Scripts>
		</CheckButton>
	</Frames>
</Frame>
</Ui>

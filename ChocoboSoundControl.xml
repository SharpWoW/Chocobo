<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<Frame name="ChocoboSoundControlFrame" parent="UIParent" hidden="true" enableMouse="true" movable="true">
	<Size>
		<AbsDimension x="400" y="230" />
	</Size>
	<Anchors>
		<Anchor point="CENTER" />
	</Anchors>
	<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
		<EdgeSize>
			<AbsValue val="32" />
		</EdgeSize>
		<TileSize>
			<AbsValue val="32" />
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="11" right="12" top="12" bottom="11" />
		</BackgroundInsets>
	</Backdrop>
	<Scripts>
		<OnLoad>ChocoboSoundControl_OnLoad();</OnLoad>
		<OnShow>ChocoboSoundControl_UpdateInfo();</OnShow>
		<OnMouseDown>self:StartMoving();</OnMouseDown>
		<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp>
	</Scripts>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parent_TitleBorder" file="Interface\DialogFrame\UI-DialogBox-Header">
				<Size>
					<AbsDimension x="360" y="50" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="8" />
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<FontString name="$parent_TitleString" font="Fonts\FRIZQT__.TTF" text="%SOUNDCONTROL_TITLE%">
				<Size>
					<AbsDimension x="200" y="0" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-1" />
						</Offset>
					</Anchor>
				</Anchors>
				<FontHeight>
					<AbsValue val="12" />
				</FontHeight>
				<Color r="1" g="0.8196079" b="0" />
				<Shadow>
					<Color r="0" g="0" b="0" />
					<Offset>
						<AbsDimension x="1" y="-1" />
					</Offset>
				</Shadow>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
			<Anchors>
				<Anchor point="TOPRIGHT">
					<Offset>
						<AbsDimension x="-3" y="-3" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>ChocoboSoundControlFrame:Hide();</OnClick>
			</Scripts>
		</Button>
		<Frame name="$parent_Caption">
			<Size>
				<AbsDimension x="370" y="33" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-28" />
					</Offset>
				</Anchor>
			</Anchors>
			<Layers>
				<Layer>
					<FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="%SOUNDCONTROL_DESCRIPTION%">
						<Anchors>
							<Anchor point="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" />
						</Anchors>
						<FontHeight>
							<AbsValue val="12" />
						</FontHeight>
						<Color r="1" g="0.8196079" b="0" />
						<Shadow>
							<Color r="0" g="0" b="0" />
							<Offset>
								<AbsDimension x="1" y="-1" />
							</Offset>
						</Shadow>
					</FontString>
				</Layer>
			</Layers>
		</Frame>
		<Frame name="$parent_Description">
			<Size>
				<AbsDimension x="370" y="45" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-60" />
					</Offset>
				</Anchor>
			</Anchors>
			<Layers>
				<Layer>
					<FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="%SOUNDCONTROL_DESCRIPTION%">
						<Anchors>
							<Anchor point="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" />
						</Anchors>
						<FontHeight>
							<AbsValue val="12" />
						</FontHeight>
						<Color r="1" g="0.8196079" b="0" />
						<Shadow>
							<Color r="0" g="0" b="0" />
							<Offset>
								<AbsDimension x="1" y="-1" />
							</Offset>
						</Shadow>
					</FontString>
				</Layer>
			</Layers>
		</Frame>
		<Button name="$parent_ToggleButton" text="%SOUNDCONTROL_TOGGLE%" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="300" y="30" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="50" y="-115" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>Chocobo:ToggleSoundControl(); ChocoboSoundControl_UpdateInfo();</OnClick>
			</Scripts>
		</Button>
		<Button name="$parent_ReturnButton" text="%SOUNDCONTROL_RETURN%" inherits="OptionsButtonTemplate">
			<Size>
				<AbsDimension x="300" y="30" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="50" y="-150" />
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>ChocoboSoundControlFrame:Hide(); ChocoboOptionsFrame:Show();</OnClick>
			</Scripts>
		</Button>
		<Frame name="$parent_Status">
			<Size>
				<AbsDimension x="370" y="18" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="14" y="-185" />
					</Offset>
				</Anchor>
			</Anchors>
			<Layers>
				<Layer>
					<FontString name="$parentLabel" font="Fonts\FRIZQT__.TTF" text="%SOUNDCONTROL_STATUS%">
						<Anchors>
							<Anchor point="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" />
						</Anchors>
						<FontHeight>
							<AbsValue val="12" />
						</FontHeight>
						<Color r="1" g="0.8196079" b="0" />
						<Shadow>
							<Color r="0" g="0" b="0" />
							<Offset>
								<AbsDimension x="1" y="-1" />
							</Offset>
						</Shadow>
					</FontString>
				</Layer>
			</Layers>
		</Frame>
	</Frames>
</Frame>
</Ui>
